#!/bin/bash

#   find the first docker-machine, start it, and set appropriate environment variables
#   if you don't want to automatically start the first machine in the list produced by `docker-machine ls`, this script is not for you
machinename="$(docker-machine ls -q | head -n 1)"
docker-machine start "$machinename"
evalstring="$(docker-machine env $machinename)"
eval $evalstring
